package strings;

public class ReplacingWithReplace {
	public static void main(String[] args) {
	
		String s = "My cat is lazy";
		String s2 = "Budgrt";
		
		String s1 = s.replace("cat", "dog");
		String s3 = s2.replace('r', 'e');
		
		System.out.println(s);
		System.out.println("Replaced char sequence :" +s1);
		System.out.println(s2);
		System.out.println("Replaced char  : " +s3);
		
		 
		
		
	}

}
